---
import Layout from '../layouts/Layout.astro';
import StarRating from '../components/StarRating.astro';
---

<Layout title="Évaluation - Ebongue Avocats">
  <main>
    <div class="logo-container">
      <img src="/logo.png" alt="Ebongue Avocats Logo" class="logo" />
    </div>
    <div class="content">
      <h1>Partagez votre expérience</h1>
      <p class="subtitle">Votre avis est précieux pour nous aider à améliorer nos services</p>
      <StarRating />
    </div>
  </main>
</Layout>

<style>
  main {
    min-height: 100vh;
    padding: 2rem;
    background-image: linear-gradient(
      rgba(0, 0, 0, 0.5),
      rgba(0, 0, 0, 0.5)
    ), url('/background.jpg');
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
  }

  .logo-container {
    text-align: center;
    margin: 2rem 0 3rem;
  }

  .logo {
    max-width: 220px;
    height: auto;
    filter: drop-shadow(0 4px 6px rgba(0, 0, 0, 0.1));
  }

  .content {
    max-width: 800px;
    margin: 0 auto;
  }

  h1 {
    text-align: center;
    color: white;
    margin-bottom: 1rem;
    font-size: 2.75rem;
    font-weight: 700;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
  }

  .subtitle {
    text-align: center;
    color: #e2e8f0;
    font-size: 1.2rem;
    margin-bottom: 3rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
  }

  @media (max-width: 768px) {
    .logo {
      max-width: 180px;
    }

    h1 {
      font-size: 2.2rem;
    }

    .subtitle {
      font-size: 1.1rem;
      padding: 0 1rem;
    }
  }
</style>